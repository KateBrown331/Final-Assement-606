<div class="container py-5">
  <div class="card shadow-sm rounded-lg p-4">
    <h2 class="text-tamu-maroon fw-bold mb-4">Edit Referral Request</h2>

    <div class="mb-3">
      <p> Notes from Requester:</p>
      <%= @referral_request.note_to_poster %>
    </div>

    <%= form_with model: @referral_request, local: true do |f| %>

      <div class="mb-3">
        <%= f.label :status, "Status", class: "form-label fw-semibold" %>
        <%= f.select :status,
              options_for_select([
                ["Pending",   :pending],
                ["Approved",  :approved],
                ["Rejected",  :rejected],
                ["Withdrawn", :withdrawn]
              ], f.object.status),
              { prompt: "Select a status" },
              { class: "form-select", required: true } %>
      </div>

      <%= f.submit "Update Referral Request", class: "tamu-btn tamu-btn-maroon" %>
      <%= link_to "Cancel", referral_post_path(@referral_post), class: "btn btn-outline-secondary ms-2" %>
    <% end %>

  </div>
</div>