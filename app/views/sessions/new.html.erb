<div class="min-vh-100 d-flex align-items-center justify-content-center py-5" style="background-color: #f6f6f6;">
  <div class="w-100" style="max-width: 420px;">
    <div class="card shadow-lg rounded-3">
      <div class="card-body p-4">

        <h1 class="text-center mb-4 text-maroon fw-bold">Log In</h1>

        <%= form_with url: login_path, local: true do %>

          <div class="mb-3">
            <%= label_tag :email, "Email", class: "form-label fw-semibold" %>
            <%= email_field_tag :email, nil, required: true, class: "form-control" %>
          </div>

          <div class="mb-3">
            <%= label_tag :password, "Password", class: "form-label fw-semibold" %>
            <%= password_field_tag :password, nil, required: true, class: "form-control" %>
          </div>

          <% if @login_error %>
            <div class="text-danger text-center small mb-2"><%= @login_error %></div>
          <% end %>

          <div class="d-grid mb-2">
            <%= submit_tag "Log In", class: "btn btn-maroon" %>
          </div>

        <% end %>

        <div class="text-center mt-3">
          <%= link_to "Sign Up", new_user_path, class: "btn btn-outline-maroon w-100" %>
        </div>

      </div>
    </div>
  </div>
</div>
