<h1 class="text-center mb-4 text-tamu-maroon fw-bold">Request Company Verification</h1>

<%= form_with model: @company_verification, local: true do |f| %>
  <div class="mb-3">
    <%= f.label :company_name, class: "form-label fw-semibold" %>
    <%= f.text_field :company_name, class: "form-control", placeholder: "Google" %>
  </div>

  <div class="mb-3">
    <%= f.label :company_email, class: "form-label fw-semibold" %>
    <%= f.email_field :company_email, class: "form-control", placeholder: "you@google.com" %>
  </div>

  <div class="mt-3">
    <%= f.submit "Request Verification", class: "tamu-btn tamu-btn-maroon" %>
  </div>
<% end %>
